{
  "extends": "nx/presets/npm.json",
  "plugins": ["@monodon/rust"],
  "release": {
    "projects": ["riscv-vm", "kernel", "relay"],
    "projectsRelationship": "independent",
    "changelog": {
      "projectChangelogs": {
        "renderOptions": {
          "authors": true
        },
        "createRelease": "github"
      },
      "workspaceChangelog": false
    },
    "git": {
      "commit": true,
      "tag": true
    },
    "version": {
      "conventionalCommits": true
    }
  }
}
